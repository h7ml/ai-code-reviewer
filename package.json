{
  "name": "ai-code-reviewer",
  "type": "module",
  "version": "0.1.0",
  "packageManager": "pnpm@10.6.2",
  "description": "一个用于GitLab/GitHub或通用代码托管平台的自动化代码审查工具",
  "author": "AI Code Reviewer Team",
  "license": "MIT",
  "homepage": "https://github.com/ai-code-reviewer/ai-code-reviewer#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ai-code-reviewer/ai-code-reviewer.git"
  },
  "bugs": "https://github.com/ai-code-reviewer/ai-code-reviewer/issues",
  "keywords": [
    "code-review",
    "ai",
    "automation",
    "gitlab",
    "github",
    "openai",
    "ollama"
  ],
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./package.json": "./package.json"
  },
  "main": "./dist/index.mjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "bin": {
    "ai-review": "./dist/cli.mjs"
  },
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "unbuild",
    "dev": "unbuild --stub",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "nr build",
    "release": "bumpp && pnpm publish",
    "start": "tsx src/index.ts",
    "cli": "tsx src/cli.ts",
    "test": "vitest",
    "typecheck": "tsc --noEmit",
    "prepare": "simple-git-hooks"
  },
  "dependencies": {
    "cac": "^6.7.14",
    "chalk": "^5.3.0",
    "consola": "^3.2.3",
    "cross-fetch": "^3.1.5",
    "dotenv": "^16.3.1",
    "openai": "^4.19.0",
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^4.11.0",
    "@antfu/ni": "^24.3.0",
    "@antfu/utils": "^9.1.0",
    "@types/node": "^22.13.14",
    "bumpp": "^10.1.0",
    "eslint": "^9.23.0",
    "fast-glob": "^3.3.3",
    "lint-staged": "^15.5.0",
    "simple-git-hooks": "^2.12.1",
    "tinyexec": "^1.0.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "unbuild": "^3.5.0",
    "vite": "^6.2.3",
    "vitest": "^3.0.9",
    "vitest-package-exports": "^0.1.1"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm i --frozen-lockfile --ignore-scripts --offline && npx lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs,cjs}": "eslint --fix --cache",
    "*.json": "eslint --fix --cache"
  }
}
